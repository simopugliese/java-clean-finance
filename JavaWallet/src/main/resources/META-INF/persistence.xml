<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="finance-unit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.javawallet.domain.model.Wallet</class>
        <class>com.javawallet.domain.model.Transaction</class>
        <class>com.javawallet.domain.model.Money</class>
        <class>com.javawallet.domain.model.Category</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/javawallet_db"/> <!-- TODO: sostituisci -->
            <property name="jakarta.persistence.jdbc.user" value="root"/> <!-- TODO: sostituisci -->
            <property name="jakarta.persistence.jdbc.password" value="password"/> <!-- TODO: sostituisci -->

            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/> <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>